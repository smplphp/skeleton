{
  "name": "smplphp/skeleton",
  "description": "A simple modern PHP skeleton library",
  "minimum-stability": "stable",
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Ollie Read",
      "email": "smpl@ollie.codes"
    }
  ],
  "require": {
    "php": "^8.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "sempro/phpunit-pretty-print": "^1.4",
    "vimeo/psalm": "^4.21",
    "phpstan/phpstan": "^1.4"
  },
  "autoload": {
    "psr-4": {
      "Smpl\\Skeleton\\": "src/",
      "Smpl\\Meta\\Skeleton\\": "meta/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Smpl\\Skeleton\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "./vendor/bin/phpunit",
    "test-coverage": "./vendor/bin/phpunit --coverage-html build/coverage",
    "psalm": "./vendor/bin/psalm --no-cache --shepherd",
    "phpstan": "./vendor/bin/phpstan analyse -c phpstan.neon",
    "infection": "infection --only-covered --threads=8",
    "ci": [
      "@test-coverage",
      "@infection",
      "@psalm",
      "@phpstan"
    ]
  }
}